{
  "name": "cudacoder/learning-php-slim-vue",
  "description": "A tutorial project for a PHP Slim + Vue.js app.",
  "license": "GPL-3.0",
  "require": {
    "php": ">=7.1",
    "ext-pdo": "*",
    "ext-json": "*",
    "dto/dto": "^3.2",
    "slim/slim": "^3.1",
    "doctrine/orm": "^2.6",
    "slim/php-view": "^2.0",
    "symfony/finder": "^4.1",
    "symfony/process": "^4.1",
    "aws/aws-sdk-php": "^3.36",
    "monolog/monolog": "^1.17",
    "symfony/filesystem": "^4.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "App\\": "src/backend/"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "test": "phpunit --testdox",
    "init-db": "doctrine o:s:c"
  }
}
